704. Binary Search

class Solution {
public:
    int search(vector<int>& nums, int target) {
        //T=O(logN) worst case log time, S=O(1) r l m
        int l = 0;
        int r = nums.size()-1;
        while (l<=r){
            //not m = (R-L)/2. because m is index, not value
            int m = (r + l)/2;
            if (nums[m] == target){
                return m;
            }
            else if (nums[m] < target){
                l = m+1;
            }
            else{
                r = m-1;
            }
        }
        return -1;
    }
};
